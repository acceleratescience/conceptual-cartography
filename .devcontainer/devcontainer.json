{
    "name": "Conceptual Engineering Tool",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
            "terminal.integrated.defaultProfile.linux": "bash",
            "editor.formatOnSave": true
            },
            "extensions": [
            "ms-python.python",
            "charliermarsh.ruff",
            "ms-toolsai.jupyter",
            "github.copilot-chat",
            "ms-azuretools.vscode-docker"
            ]
        }
    },
    "postCreateCommand": "bash ./setup.sh --dev"
}